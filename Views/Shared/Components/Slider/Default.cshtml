<div class="main-slider pattern-overlay">
	@foreach (var item in Model)
	{
		<div class="slider-item">
			<div class="banner-content">
				<h2 class="banner-title">@item.Title</h2>
				<p>
					@item.Description
				</p>
				<div class="btn-wrap">
					<a href="~/assets/#" class="btn btn-outline-accent btn-accent-arrow">
						Read More<i class="icon icon-ns-arrow-right"></i>
					</a>
				</div>
			</div><!--banner-content-->
			<img src="~/assets/images/@item.Image" alt="banner" class="banner-image">
		</div>

		<!--slider-item-->
	}



</div><!--slider-->