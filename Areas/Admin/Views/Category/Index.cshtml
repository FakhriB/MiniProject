@model IEnumerable<CategoryVM>

<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="#" title="Go to Home" class="tip-bottom">
            </a>
            
        </div>
       
    </div>

    <div class="container-fluid">
        <hr>

        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">

                    <div class="widget-title">
                        <span class="icon">
                            <i class="icon-th"></i>
                        </span>
                        <h5>Category</h5>

                        <a asp-action="Create" class="btn btn-success pull-right" style="margin:5px 10px 0 0;">
                            Create
                        </a>
                    </div>


                    <div class="widget-content nopadding">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Created Date</th>
                                    <th style="width:200px; text-align:center;">Operations</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                        <td style="text-align:center;">
                                            <a href="#" class="btn btn-info btn-mini">View</a>
                                            <a href="#" class="btn btn-warning btn-mini">Update</a>
                                            <form asp-area="Admin"
                                                  asp-controller="Category"
                                                  asp-action="Delete"
                                                  method="post"
                                                  style="display:inline;">
                                                <input type="hidden" name="id" value="@item.Id" />

                                                <button type="submit"
                                                        class="btn btn-danger btn-mini"
                                                        onclick="return confirm('Delete?')">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>